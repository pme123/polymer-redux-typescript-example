    "merge-stream": "^1.0.1",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "plylog": "^0.4.0",
    "polymer-build": "github:tony19-contrib/polymer-build#dist-css-rejoin",
    "polymer-cli": "^0.17.0",
    "pump": "^1.0.2",
    "run-sequence": "^1.2.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "yargs": "^6.6.0"
  },
  "dependencies": {
    "systemjs": "^0.19.41",
    "redux": "^3.6.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "bower_components",
      "node_modules/",
      "build/"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register",
      "babel-core/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
