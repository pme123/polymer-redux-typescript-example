    "@types/gulp-load-plugins": "^0.0.28",
    "@types/merge-stream": "^1.0.28",
    "@types/mocha": "^2.2.38",
    "@types/node": "^7.0.4",
    "@types/polymer-ts": "^0.1.28",
    "@types/run-sequence": "^0.0.28",
    "@types/sinon": "^1.16.34",
    "@types/sinon-chai": "^2.7.27",
    "@types/yargs": "^6.5.0",
    "babel-core": "^6.22.1",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.6",
    "chai": "^3.5.0",
