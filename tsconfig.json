{
  "compilerOptions": {
    //"declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es5",
    "allowJs": true,
    "outDir": "build",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "build",
    "bower_components",
    "node_modules"
  ]
}
